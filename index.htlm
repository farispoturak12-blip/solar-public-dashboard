<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8"/>
<title>Solar Dashboard</title>

<style>
body{
background:#0b1220;
color:white;
font-family:Arial;
text-align:center;
padding-top:80px;
}

.power{
font-size:70px;
font-weight:bold;
margin-top:40px;
}
</style>

</head>

<body>

<h1>☀️ Solar Production</h1>

<div class="power" id="power">
Loading...
</div>

<script>

async function load(){

const res = await fetch("/api/production");
const json = await res.json();

document.getElementById("power").innerText =
json.data.power + " W";

}

load();
setInterval(load,30000);

</script>

</body>
</html>
